<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@android:color/black"
    tools:context="com.suvankarmitra.fullscreentextdemo3.AudioBookFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/player_background"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_back"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:background="@android:color/transparent"
        android:paddingStart="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingTop="16dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_queue"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_queue_music_black_24dp"
        android:background="@android:color/transparent"
        android:paddingStart="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingTop="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_high">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:layout_margin="@dimen/margin_high"
                    android:id="@+id/player_album_art"
                    android:src="@drawable/alices_adventures_in_wonderland_book_cover"/>
                <TextView
                    android:id="@+id/player_album_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:fontFamily="cursive"
                    android:textColor="@android:color/white"
                    android:maxLines="2"
                    android:background="@drawable/box_up_border_line_black"
                    android:text="Alice's Adevntures in Wonderland\nby Lewis Caroll"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:id="@+id/player_prev"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="16dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_skip_previous_black_24dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:id="@+id/player_play_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_play_circle_filled_black_24dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:id="@+id/player_next"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="16dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_skip_next_black_24dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/player_cur_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="00:00"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                        <SeekBar
                            android:id="@+id/player_seekBar"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/player_total_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="00:00"
                            android:textColor="@android:color/white"
                            android:gravity="center|end"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-condensed"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/player_progressbar"
        android:layout_width="match_parent"
        android:layout_below="@+id/player_back"
        android:clickable="true"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.7">
        <ProgressBar
            android:id="@+id/pb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/player_progressbar_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pb1"
            android:layout_centerHorizontal="true"
            android:text="Loading..."
            android:layout_marginTop="@dimen/margin_normal"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </RelativeLayout>

</RelativeLayout>
